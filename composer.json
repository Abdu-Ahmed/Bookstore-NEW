{
    "name": "abdulrahman/bookstore",
    "description": "Bookstore scaffold",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.6",
        "monolog/monolog": "^3.9",
        "firebase/php-jwt": "^6.11",
        "stripe/stripe-php": "^17.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.13",
        "friendsofphp/php-cs-fixer": "^3.86",
        "robmorgan/phinx": "^0.16.10",
        "guzzlehttp/guzzle": "^7.10"
    },
 "autoload": {
        "psr-4": {
            "App\\": [
                "src/",
                "app/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 127.0.0.1:8000 -t public",
        "test": "phpunit --colors=always",
        "phpstan": "phpstan analyse src app --level=7",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "phpcs --standard=PSR12 src app"
    },
    "minimum-stability": "stable",
    "license": "MIT"
}
